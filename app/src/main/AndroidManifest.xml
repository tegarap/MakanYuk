<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.co.tegarap.makanyuk">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="id.co.tegarap.makanyuk.ui.splashscreen.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="id.co.tegarap.makanyuk.ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.daftarmeals.DaftarMealsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="id.co.tegarap.makanyuk.ui.main.MainActivity" />
        </activity>
        <activity
            android:name="id.co.tegarap.makanyuk.ui.detailmeals.DetailMealsActivity"
            android:label="@string/title_activity_detail_meals"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.daftarmeals.DaftarMealsActivity" />
        </activity>
    </application>

</manifest>